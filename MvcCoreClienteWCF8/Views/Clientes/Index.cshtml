@model IEnumerable<MvcCoreClienteWCF8.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Clientes XML</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenCliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <img src="@item.ImagenCliente"                
                style="width: 150px; height: 150px"/>
            </td>
            <td>
                <a asp-controller="Clientes"
                    asp-action="Details"
                    asp-route-idcliente="@item.IdCliente"
                    class="btn btn-dark">
                    Details
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
